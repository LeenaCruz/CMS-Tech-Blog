
{{#if loggedIn}}
<div class="container">
  <div class="login-card">
    <h2 class="page-title">New Blog</h2>
    <form class="form blogpost-form">
      <div class="form-group">
        <label for="title">Title:</label>
        <input class="form-input" type="text" id="title" />
      </div>
     <div class="form-group">
        <label for="content">Content:</label>
        <input class="form-input" type="text" id="content" />
      </div>
    
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Create</button>
      </div>
    </form>
  </div>
<script src="/js/blogpost.js"></script>
{{else}}
<div class="container">
<h3 class="page-title">Please log in to view your dashboard.</h3>
<div>
    <a href="/login">Login Here</a>
</div>
</div>
{{/if}}